<p id="notice"><%= notice %></p>

<h1>Listing Daily Step Counts</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_steps.each do |daily_step| %>
      <tr>
        <td><%= daily_step.amount %></td>
        <td><%= daily_step.date %></td>
        <td><%= link_to 'Show', daily_step %></td>
        <td><%= link_to 'Edit', edit_daily_step_path(daily_step) %></td>
        <td><%= link_to 'Destroy', daily_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Step Count', new_daily_step_path %>
