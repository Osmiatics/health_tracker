<p id="notice"><%= notice %></p>

<h1>Listing Daily Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Exercise type</th>
      <th>Duration</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_exercises.each do |daily_exercise| %>
      <tr>
        <td><%= daily_exercise.exercise_type_id %></td>
        <td><%= daily_exercise.duration %></td>
        <td><%= daily_exercise.date %></td>
        <td><%= link_to 'Show', daily_exercise %></td>
        <td><%= link_to 'Edit', edit_daily_exercise_path(daily_exercise) %></td>
        <td><%= link_to 'Destroy', daily_exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

